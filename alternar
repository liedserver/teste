function alternarAbas(intervalo) {
    var abas = Array.from(document.querySelectorAll('div[role="tab"]'));
    var indiceAtual = 0;

    function mostrarProximaAba() {
        abas[indiceAtual].click();
        indiceAtual = (indiceAtual + 1) % abas.length;
    }

    setInterval(mostrarProximaAba, intervalo);
}

// Defina o intervalo de tempo em milissegundos (por exemplo, 5000 para 5 segundos)
alternarAbas(5000);
